<center>

<ul>
<%@bookmarks.each do |bookmark| %>
  <li class="bookmark" id="bookmark-<%= bookmark.id %>">
    <a href= "<%=bookmark.url%>" >
      <%=bookmark.title%>
    </a>
    <form action="bookmarks/<%= bookmark.id %>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete"/>
    </form>
    <form action="bookmarks/<%= bookmark.id %>" method="get">
      <!-- <input type="hidden" name="id" value="<%= bookmark.id%> "> -->
      <input type="submit" value="Update"/>
    </form>
  </li>
<%end%>
</ul>

<form action='/bookmarks/create' method="post">
  Enter bookmark URL: <input type='text' name='url'/><br/>
  Enter bookmark Title: <input type='text' name='title'/><br/>
  <input type='submit' value='add_bookmark'/>
  </form>

</center>
